{
  "manifestVersion": 1,
  "id": "custom-input-number-extension-disabled",
  "name": "Custom Input Number Extension",
  "publisher": "haiht-vmogroup",
  "version": "1.0.1",
  "description": "Custom Input Control for Azure DevOps Work Item Forms",
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "categories": [
    "Azure Boards"
  ],
  "files": [
    {
      "path": "dist",
      "addressable": true
    }
  ],
  "contributions": [
    {
      "id": "custom-input-number-extension-disabled",
      "type": "ms.vss-work-web.work-item-form-control",
      "description": "Custom Input Number Field",
      "targets": [
        "ms.vss-work-web.work-item-form"
      ],
      "properties": {
        "name": "Custom Input Number Control",
        "uri": "dist/index.html",
        "inputs": [
          {
            "id": "Field",
            "name": "Field",
            "description": "Select a field for reading and saving value.",
            "type": "WorkItemField",
            "properties": {
              "workItemFieldTypes": [
                "String",
                "PlainText",
                "HTML",
                "Integer"
              ]
            },
            "validation": {
              "dataType": "String",
              "isRequired": true
            }
          },
          {
            "id": "MinValue",
            "name": "MinValue",
            "type": "Integer",
            "description": "Minimum value of the input field.",
            "properties": {
              "defaultValue": 0
            },
            "validation": {
              "isRequired": false
            }
          },
          {
            "id": "IsDisabled",
            "name": "IsDisabled",
            "description": "Disable the input field.",
            "type": "boolean",
            "validation": {
              "isRequired": false
            }
          }
        ]
      }
    }
  ]
}